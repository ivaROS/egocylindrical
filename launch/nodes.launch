<launch>
  <arg name="depth_image" default="/camera/depth/image_raw"/>
  
  <arg name="profile_args" default="valgrind --tool=callgrind"/>

  <node name="depth_to_egocylindrical_node" pkg="egocylindrical" type="egocylindrical_propagator_node" output="screen" launch-prefix="valgrind --tool=callgrind">
      <remap from="/camera/depth/image_raw" to="$(arg depth_image)"/>
  </node>

  <node name="egocylindrical_to_pointcloud" pkg="egocylindrical" type="pointcloud_generator_node" output="screen"/>

  <node name="egocylindrical_to_range_image" pkg="egocylindrical" type="range_image_node"/>
  
</launch>
